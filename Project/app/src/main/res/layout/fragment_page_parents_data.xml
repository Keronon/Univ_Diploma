<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LAYOUT_father"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_father"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:text="@string/LBL_father"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_father_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_surname"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_father_fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_fathername"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_father_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_phone"
                android:inputType="phone"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_father_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_reg"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LAYOUT_mother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:text="@string/LBL_mother"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_mother_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_surname"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_mother_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_mother_fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_fathername"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_mother_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_phone"
                android:inputType="phone"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TXT_mother_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:autofillHints="true"

                android:background="@drawable/back_border"
                android:hint="@string/HINT_reg"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>