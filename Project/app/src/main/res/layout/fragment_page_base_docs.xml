<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TXT_base_info_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="@string/LBL_base_info_1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/teal_900"
            android:textColorHint="@color/teal_900"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TXT_base_info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="@string/LBL_base_info_2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/teal_900"
            android:textColorHint="@color/teal_900"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_prev_educ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-5dp"

            android:text="@string/HINT_prev_educ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/teal_900"
            android:textColorHint="@color/teal_900"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/CHECK_bachelor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dp"

            android:text="@string/bachelor"
            android:textColor="@color/teal_900"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/CHECK_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dp"

            android:text="@string/expert"
            android:textColor="@color/teal_900"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/CHECK_master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:text="@string/master"
            android:textColor="@color/teal_900"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LAYOUT_doc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_doc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:text="@string/LBL_doc_1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_op_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:text="@string/HINT_op"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SPINNER_op_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drop_down"
                android:popupBackground="@drawable/drop_down_list"

                android:minHeight="50dp"
                android:contentDescription="@string/drop_down_list"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/TXT_educ_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:text="@string/HINT_educ"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SPINNER_educ_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drop_down"
                android:popupBackground="@drawable/drop_down_list"

                android:contentDescription="@string/drop_down_list"
                android:minHeight="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_educ_status_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="-5dp"

                android:text="@string/HINT_educ_status"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/RADIO_educ_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RADIO_yes_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="@string/HINT_yes"
                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <RadioButton
                    android:id="@+id/RADIO_no_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="@string/HINT_no"
                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <RadioButton
                    android:id="@+id/RADIO_progress_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="@string/HINT_progress"
                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck" />
            </RadioGroup>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/SWITCH_doc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:checked="true"

                android:background="@drawable/back_border"
                android:padding="15dp"
                android:text="@string/TXT_doc_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LAYOUT_doc_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_doc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:text="@string/LBL_doc_2"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_op_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:text="@string/HINT_op"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SPINNER_op_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drop_down"
                android:popupBackground="@drawable/drop_down_list"

                android:minHeight="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textStyle="bold"
                android:contentDescription="@string/drop_down_list"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/TXT_educ_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:text="@string/HINT_educ"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/SPINNER_educ_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drop_down"
                android:popupBackground="@drawable/drop_down_list"

                android:minHeight="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textStyle="bold"
                android:contentDescription="@string/drop_down_list"/>

            <TextView
                android:id="@+id/TXT_educ_status_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="-5dp"

                android:text="@string/HINT_educ_status"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teal_900"
                android:textColorHint="@color/teal_900"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/RADIO_educ_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/RADIO_yes_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    android:text="@string/HINT_yes" />
                <RadioButton
                    android:id="@+id/RADIO_no_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    android:text="@string/HINT_no" />
                <RadioButton
                    android:id="@+id/RADIO_progress_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:textColor="@color/teal_900"
                    android:textStyle="bold"
                    android:text="@string/HINT_progress" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</ScrollView>